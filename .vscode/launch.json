{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe", // 可执行文件路径（与tasks.json输出对应）
            "args": [], // 程序运行参数（无则留空）
            "stopAtEntry": false, // 是否在程序入口处暂停
            "cwd": "${fileDirname}", // 工作目录（代码所在目录）
            "environment": [],
            "externalConsole": false, // 是否使用外部控制台（建议false，在VS Code内置终端输出）
            "MIMode": "gdb", // 调试器（MinGW用gdb）
            "setupCommands": [
                {
                    "description": "为gdb启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // 调试前先执行的任务（即tasks.json中的build）
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", // 调试器路径（Windows一般为MinGW安装目录下的bin/gdb.exe，如C:/MinGW/bin/gdb.exe）
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "moduleLoad": false
            }
        }
    ]
}